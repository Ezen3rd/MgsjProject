<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.boardReplyMapper">
	<!-- 
		rno	int	NO	PRI		auto_increment
		bno	int	NO	PRI		
		writer	varchar(20)	NO			
		content	text	NO			
		regDate	datetime	NO		CURRENT_TIMESTAMP	DEFAULT_GENERATED
	 -->
	 
	 <!-- 댓글목록불러오기 -->
	 <select id="replyList" parameterType="int" resultType="com.project.board.domain.BoardReplyDTO">
	 	select rno, bno, writer, content, regDate
	 		from boardreplydto
	 	where rno = #{rno}
	 	and bno = #{bno}
	 </select>
	
	
</mapper>